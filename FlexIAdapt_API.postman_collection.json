{
  "info": {
    "name": "FlexIAdapt API",
    "description": "API completa para el sistema FlexIAdapt",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "auth_token",
      "value": "teacher_SwjUcOE8Vi0WGwBLKC_2l_1759172986159"
    },
    {
      "key": "student_id",
      "value": "G0xlw6xMqb-Y4_ya1uwos"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Teacher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"profesor@test.com\",\n  \"password\": \"demo123\",\n  \"name\": \"María\",\n  \"lastName\": \"García\",\n  \"school\": \"Escuela Primaria\",\n  \"grade\": \"5° Primaria\",\n  \"subject\": \"Matemáticas\",\n  \"phoneNumber\": \"999888777\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login Teacher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ruth@gmail.com\",\n  \"password\": \"demo123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Students",
      "item": [
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ana María López\",\n  \"age\": 10,\n  \"grade\": \"5° Primaria\",\n  \"mainSubjects\": \"Matemáticas, Ciencias\",\n  \"specialNeeds\": \"Dislexia leve, necesita más tiempo para lectura\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/students",
              "host": ["{{base_url}}"],
              "path": ["api", "students"]
            }
          }
        },
        {
          "name": "Get All Students",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/students",
              "host": ["{{base_url}}"],
              "path": ["api", "students"]
            }
          }
        },
        {
          "name": "Get Student by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/students/{{student_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "{{student_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Evidence",
      "item": [
        {
          "name": "Create Evidence (with file)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "taskTitle",
                  "value": "Resolución de problemas matemáticos",
                  "type": "text"
                },
                {
                  "key": "subject",
                  "value": "Matemáticas",
                  "type": "text"
                },
                {
                  "key": "evidenceType",
                  "value": "imagen",
                  "type": "text"
                },
                {
                  "key": "originalInstructions",
                  "value": "Resuelve los siguientes ejercicios de fracciones",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": "path/to/your/file.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/students/{{student_id}}/evidence",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "{{student_id}}", "evidence"]
            }
          }
        },
        {
          "name": "Get Student Evidence",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/students/{{student_id}}/evidence",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "{{student_id}}", "evidence"]
            }
          }
        },
        {
          "name": "Get All Teacher Evidence",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/evidence",
              "host": ["{{base_url}}"],
              "path": ["api", "evidence"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Analysis",
      "item": [
        {
          "name": "Analyze Evidence with AI",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"analysisType\": \"comprehensive\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/evidence/{evidence_id}/ai-analyze",
              "host": ["{{base_url}}"],
              "path": ["api", "evidence", "{evidence_id}", "ai-analyze"]
            }
          }
        }
      ]
    }
  ]
}
